from admin import masukadmin
from owner import masukowner

def main():
    while True:
        print('\nSelamat Datang!')
        print('1. Masuk sebagai owner')
        print('2. Masuk sebagai admin')
        print('3. Masuk sebagai customer')
        masuk = input(f'Pilih opsi di atas : ')
        
        if masuk == '1':
            masukowner()
        elif masuk == '2':
            masukadmin()
        # elif masuk == '3':
        #     comingsoon
        else:
            print("Pilihan tidak valid, silakan pilih angka 1 sampai 3")
if __name__ == '__main__':
    main()
